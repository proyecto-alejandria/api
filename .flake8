[flake8]

max-line-length = 88 # because of Black

ignore =
    E203, # whitespace before ':' - because of Black
    E261, # two spaces before inline comment
    E501, # Line too long
    W503, # line break before binary operator (we follow PEP 8)

per-file-ignores =
    admin.py: E305,

exclude = venv,.git,__pycache__,migrations
